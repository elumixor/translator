{
    "name": "translator",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "lint": "ng lint",
        "dev": "concurrently \"npm run dev:front\" \"npm run dev:back\"",
        "dev:front": "NG_APP_URL=$(ip addr show eth0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') ng serve",
        "dev:back": "IP=$(ip addr show eth0 | grep -oP '(?<=inet\\s)\\d+(\\.\\d+){3}') NG_DEV=TRUE bun run server/main.ts",
        "watch": "ng build --watch --configuration development",
        "test": "jest --verbose --passWithNoTests",
        "test:coverage": "jest --coverage --passWithNoTests",
        "test:watch": "jest --watch",
        "serve:ssr": "node dist/translator/server/server.mjs"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.1.0",
        "@angular/common": "^17.1.0",
        "@angular/compiler": "^17.1.0",
        "@angular/core": "^17.1.0",
        "@angular/forms": "^17.1.0",
        "@angular/platform-browser": "^17.1.0",
        "@angular/platform-browser-dynamic": "^17.1.0",
        "@angular/platform-server": "^17.1.0",
        "@angular/router": "^17.1.0",
        "@angular/ssr": "^17.1.0",
        "@elumixor/frontils": "^1.1.0",
        "@types/cors": "^2.8.17",
        "cors": "^2.8.5",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^5.0.1",
        "express": "^4.18.2",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.1.0",
        "@angular-eslint/builder": "17.2.0",
        "@angular-eslint/eslint-plugin": "17.2.0",
        "@angular-eslint/eslint-plugin-template": "17.2.0",
        "@angular-eslint/schematics": "17.2.0",
        "@angular-eslint/template-parser": "17.2.0",
        "@angular/cli": "^17.1.0",
        "@angular/compiler-cli": "^17.1.0",
        "@ngx-env/builder": "^17.3.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/node": "^18.18.0",
        "@typescript-eslint/eslint-plugin": "6.18.0",
        "@typescript-eslint/parser": "6.18.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "jest-preset-angular": "^14.0.0",
        "ts-jest": "^29.1.2",
        "typescript": "~5.3.2"
    }
}
